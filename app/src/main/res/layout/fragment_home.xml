<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="@dimen/home_row_width"
            android:layout_height="@dimen/home_row_height_first"
            android:layout_marginTop="@dimen/home_row_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtCityName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter name of city"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnGetWeather"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="onGetWeather"
                android:text="Update"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/home_row_width"
            android:layout_height="@dimen/home_row_height"
            android:layout_marginTop="@dimen/home_row_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Current" />

            <TextView
                android:id="@+id/txtCurrent"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Feels" />

            <TextView
                android:id="@+id/txtFeels"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/home_row_width"
            android:layout_height="@dimen/home_row_height"
            android:layout_marginTop="@dimen/home_row_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Max" />

            <TextView
                android:id="@+id/txtMax"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Min" />

            <TextView
                android:id="@+id/txtMin"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/home_row_width"
            android:layout_height="@dimen/home_row_height"
            android:layout_marginTop="@dimen/home_row_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Humidity" />

            <TextView
                android:id="@+id/txtHumidity"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Pressure" />

            <TextView
                android:id="@+id/txtPressure"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/home_row_width"
            android:layout_height="@dimen/home_row_height"
            android:layout_marginTop="@dimen/home_row_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Visibility" />

            <TextView
                android:id="@+id/txtVisibility"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text="Wind" />

            <TextView
                android:id="@+id/txtWind"
                android:layout_width="@dimen/home_row_text_width"
                android:layout_height="wrap_content"
                android:text=" " />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>